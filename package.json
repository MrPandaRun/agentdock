{
  "name": "agentdock",
  "private": true,
  "version": "0.1.0",
  "packageManager": "bun@1.1.27",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:desktop": "bun run --filter @agentdock/desktop tauri dev",
    "dev:mobile": "bun run --filter @agentdock/mobile start",
    "dev": "bun run --filter @agentdock/desktop dev",
    "build": "bun run --filter '*' --if-present build",
    "lint": "bun run --filter '*' --if-present lint",
    "typecheck": "bun run --filter '*' --if-present typecheck && bun run rust:check",
    "test": "bun run --filter '*' --if-present test && bun run rust:test",
    "rust:check": "cargo check --workspace --manifest-path ./Cargo.toml",
    "rust:test": "cargo test --workspace --manifest-path ./Cargo.toml"
  }
}
